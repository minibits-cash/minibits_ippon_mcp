# Database (separate from Ippon wallet DB)
DATABASE_URL="postgresql://user:password@localhost:5432/minibits_ippon_mcp"

# Ippon wallet API URL
IPPON_URL=http://localhost:3001

# Logging (trace, debug, info, warn, error)
LOG_LEVEL=debug

# MCP Server
MCP_TRANSPORT=stdio
MCP_PORT=3002
# Allowed Host header value for DNS rebinding protection.
# When the server is exposed via a reverse proxy under a public domain, set this to that domain (e.g. ippon.minibits.cash).
MCP_HOST=localhost
