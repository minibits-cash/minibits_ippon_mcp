{
  "name": "minibits_ippon_mcp",
  "type": "module",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "start:dev": "ts-node-dev --respawn --pretty --transpile-only --project tsconfig.json src/mcp.ts",
    "build": "tsc --project tsconfig.json --noEmit && esbuild src/mcp.ts --bundle --platform=node --target=es2022 --format=esm --outdir=dist --packages=external --sourcemap --banner:js=\"#!/usr/bin/env node\"",
    "start:stdio": "MCP_TRANSPORT=stdio node dist/mcp.js",
    "start:http": "MCP_TRANSPORT=http node dist/mcp.js",
    "prisma:updateTypes": "npx prisma generate",
    "prisma:updateDb": "npx prisma db push"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@prisma/client": "^6.13.0",
    "dotenv": "^17.2.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "18.17.1",
    "esbuild": "^0.27.2",
    "prisma": "^6.13.0",
    "ts-node": "10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.1.6"
  },
  "engines": {
    "node": "^24"
  }
}
